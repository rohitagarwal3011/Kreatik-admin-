<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    card_view:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eee"
    android:padding="@dimen/_10sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="@dimen/_80sdp">


        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:id="@+id/source_type"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/circle_blue"
            />
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:id="@+id/destination_type"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="right"
            android:src="@drawable/circle_orange"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_45sdp"
            android:src="@drawable/dotted_line"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:src="@drawable/ic_arrow_forward_black_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transaction_status"
            android:text="status"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transaction_date"
            android:text="In Transit"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal|center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/source"
            android:text="Site A"
            android:textSize="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_gravity="bottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destination"
            android:text="Site B"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_gravity="bottom|right"/>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/vehicle_icon"
            android:layout_gravity="center_vertical"
            android:background="@color/colorAccent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_vehicle"
            />
        <!--
         app:civ_border_color="#ccc"

         app:civ_border_width="@dimen/_1sdp"
         app:civ_shadow="true"
         app:civ_shadow_color="#ccc"
         app:civ_shadow_radius="0" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20sdp"
            android:gravity="center_vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vehicle_number"
                android:gravity="left|center_vertical"
                android:text="WB 29 2C 1984"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/driver_name"
                android:text="Driver : Dinesh Kartik"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/mdtp_dark_gray"
                android:textSize="@dimen/_12sdp" />





        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/challan_link"
            android:text="Challan-1234"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="#f4f4f4"
        android:padding="@dimen/_5sdp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products Information"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_table"
            >
            <TableRow
                android:id="@+id/rowheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:text="Product"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    android:text="Quantity"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f4f4f4"
        android:padding="@dimen/_5sdp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Images"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView

                android:id="@+id/challan_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="right"
                android:elevation="@dimen/_10sdp"
                android:visibility="visible"
                fresco:roundAsCircle="true"
                fresco:roundWithOverlayColor="#ccc"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="#ccc"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/invoice_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="right"
                android:elevation="@dimen/_10sdp"
                android:visibility="visible"
                fresco:roundAsCircle="true"
                fresco:roundWithOverlayColor="#ccc"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="#ccc"/>
            <com.facebook.drawee.view.SimpleDraweeView

                android:id="@+id/onrecieve_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="right"
                android:elevation="@dimen/_10sdp"
                android:visibility="visible"
                fresco:roundAsCircle="true"
                fresco:roundWithOverlayColor="#ccc"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="#ccc"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/unloaded_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="right"
                android:elevation="@dimen/_10sdp"
                android:visibility="visible"
                fresco:roundAsCircle="true"
                fresco:roundWithOverlayColor="#ccc"
                fresco:roundBottomLeft="false"
                fresco:roundBottomRight="false"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="#ccc"/>

        </LinearLayout>




    </LinearLayout>





</LinearLayout>
    </android.support.v7.widget.CardView>