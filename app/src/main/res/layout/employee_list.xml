<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="@drawable/ripple_effect"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingTop="@dimen/_5sdp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="left"
        fresco:src="@drawable/profile"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="@dimen/_5sdp"
        fresco:roundWithOverlayColor="#ccc"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="#ccc"/>
    </LinearLayout>
       <!--
        app:civ_border_color="#ccc"

        app:civ_border_width="@dimen/_1sdp"
        app:civ_shadow="true"
        app:civ_shadow_color="#ccc"
        app:civ_shadow_radius="0" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:id="@+id/employee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:text="Rohit Agarwal"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp" />
    <TextView
        android:id="@+id/role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:text="Manager"
        android:textStyle="italic"
        android:visibility="visible"
        android:textColor="#757575"
        android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/present_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"

                android:text="Present"
                android:visibility="visible"
                android:textColor="#757575"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/leave_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:text="Absent"
                android:visibility="visible"
                android:textColor="#757575"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>


        <TextView
            android:id="@+id/hd_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/_20sdp"
            android:text="Half day"
            android:visibility="visible"
            android:textColor="#757575"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>

</LinearLayout>