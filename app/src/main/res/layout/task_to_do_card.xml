<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

<android.support.v7.widget.CardView
    android:id="@+id/card"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    card_view:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:orientation="vertical">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="invisible"
            android:src="@drawable/dotted_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Task Title"
                android:paddingBottom="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By : "
                android:textStyle="bold"
                android:textColor="#c59f63"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/to_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Employee Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/unread_count"
                android:text="2 new messages "
                android:visibility="gone"
                android:textColor="@color/color_primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="check for completion"

                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"

            android:paddingRight="@dimen/_10sdp"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/sand_glass_brown"
                android:padding="@dimen/_2sdp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/dead_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tomorrow"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/task_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="right"
                android:text="Accepted"
                android:textColor="@color/success_stroke_color"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
        </LinearLayout>




    </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/task_type_icon"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/task_type_circle"
        android:src="@drawable/colored_handshake"
        android:visibility="gone"
        android:padding="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_gravity="right"
        android:elevation="@dimen/_10sdp"
        />

    <ImageView
        android:id="@+id/task_delete_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/task_type_circle"
        android:src="@drawable/delete"
        android:visibility="visible"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_gravity="right"
        android:elevation="@dimen/_10sdp"
        />
</FrameLayout>