<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    android:elevation="2dp"
    android:layout_marginBottom="2dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/native_padding">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/site_pic"
            android:background="@drawable/site_circle_grey"
            fresco:roundingBorderColor="@color/dark_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/native_padding"
            android:layout_toRightOf="@+id/site_pic"
            android:layout_marginLeft="@dimen/native_padding"
            android:text="Site Name"
            android:id="@+id/site_name"
            android:layout_alignTop="@+id/site_pic"
            android:textColor="@color/dark_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_name"
            android:layout_toRightOf="@id/site_pic"
            android:layout_marginRight="@dimen/native_padding"
            android:layout_marginLeft="@dimen/native_padding"
            android:text="Type"
            android:id="@+id/site_type"
            android:textStyle="italic"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>