<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a Category &amp; Product"
            android:padding="15dp"
            android:textSize="16sp"
            android:background="@drawable/round_edittext_light"
            android:textColor="@color/mdtp_dark_gray"
            android:id="@+id/form_title"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form_title"
            android:padding="15dp"
            android:textSize="14sp"
            android:id="@+id/form_category_title"
            android:background="@drawable/round_edittext_light"
            android:text="Category"
            android:textColor="@color/dark_background"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_toRightOf="@+id/form_category_title"
            android:layout_below="@+id/form_title"
            android:background="@drawable/round_edittext_light"
            android:padding="15dp"
            android:textSize="14sp"
            android:hint="Category Name"
            android:id="@+id/category_name"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form_category_title"
            android:padding="15dp"
            android:textSize="14sp"
            android:id="@+id/form_product_title"
            android:background="@drawable/round_edittext_light"
            android:text="Product"
            android:textColor="@color/dark_background"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/form_product_title"
            android:layout_below="@+id/form_category_title"
            android:background="@drawable/round_edittext_light"
            android:padding="15dp"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="14sp"
            android:hint="Product Name"
            android:id="@+id/product_name"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form_product_title"
            android:padding="15dp"
            android:textSize="14sp"
            android:id="@+id/form_unit_title"
            android:background="@drawable/round_edittext_light"
            android:text="Unit"
            android:textColor="@color/dark_background"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/form_unit_title"
            android:layout_below="@+id/product_name"
            android:background="@drawable/round_edittext_light"
            android:padding="15dp"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="14sp"
            android:hint="Unit"
            android:id="@+id/category_unit"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/form_unit_title"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Done"
            android:textColor="@color/background"
            android:id="@+id/save"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/save"
            android:id="@+id/error"
            android:textAlignment="center"
            android:textColor="@color/colorAccentRed"
            android:paddingRight="15dp"
            android:padding="5dp"
            android:paddingLeft="15dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>