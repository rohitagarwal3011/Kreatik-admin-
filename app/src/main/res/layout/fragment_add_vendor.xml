<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeet.kreatik.fragments.AddEmployeeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/add_vendor_form_cardview">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_edittext_light"
                    android:hint="Name"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/form_vendor_name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:layout_below="@+id/form_vendor_name"
                    android:background="@drawable/round_edittext_light"
                    android:hint="Address"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/form_vendor_address"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_edittext_light"
                    android:hint="Phone Number"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:layout_below="@+id/form_vendor_address"
                    android:paddingLeft="10dp"
                    android:id="@+id/form_vendor_phone"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/submit_container"
            android:layout_below="@+id/add_vendor_form_cardview"
            android:layout_margin="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="Save"
                android:id="@+id/save"
                android:textColor="@color/background" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_below="@+id/submit_container"
            android:id="@+id/title_or"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/save_add_another_container"
            android:layout_below="@+id/title_or"
            android:layout_margin="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccentRed"
                android:text="Save &amp; Add another"
                android:id="@+id/save_add_another"
                android:textColor="@color/background" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error"
            android:textColor="@color/colorAccentRed"
            android:textAlignment="center"
            android:layout_below="@id/save_add_another_container"
            android:padding="10dp"/>


    </RelativeLayout>
</FrameLayout>
