<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.rbc.admin.fragments.MyDetailsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/add_employee_form_cardview">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/form_employee_pic"
                android:background="@drawable/image_placeholder"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/form_employee_pic"
                android:background="@drawable/round_edittext_unselectable"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:layout_alignTop="@id/form_employee_pic"
                android:imeOptions="actionNext"
                android:textSize="15sp"
                android:id="@+id/form_employee_email"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:background="@drawable/round_edittext_unselectable"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:id="@+id/form_employee_role"
                android:layout_toRightOf="@id/form_employee_pic"
                android:layout_below="@id/form_employee_email" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Mobile"
                android:layout_below="@id/form_employee_pic"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/mobile_title"
                android:background="@drawable/round_edittext_light"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/mobile_title"
                android:layout_alignTop="@id/mobile_title"
                android:background="@drawable/round_edittext_light"
                android:hint="Mobile Number"
                android:inputType="number"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:id="@+id/form_employee_mobile"/>


            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Name"
                android:layout_below="@id/mobile_title"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/fullname_title"
                android:background="@drawable/round_edittext_light"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_edittext_light"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_toRightOf="@id/fullname_title"
                android:layout_below="@+id/form_employee_mobile"
                android:paddingLeft="10dp"
                android:id="@+id/form_employee_fullname"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/save_me"
                android:layout_below="@id/fullname_title"
                android:background="@color/colorAccent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:text="Save"
                android:textColor="@color/background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/save_me"
                android:padding="5dp"
                android:textColor="@color/colorAccentRed"
                android:textAlignment="center"
                android:id="@id/error"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>
